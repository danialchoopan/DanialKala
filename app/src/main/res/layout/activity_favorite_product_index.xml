<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.item.favoriteProduct.FavoriteProductIndexActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar_auth_user_activities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_favoriteProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <TextView
        android:id="@+id/favoriteProduct_nonProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazir"
        android:text="محصولی برای نمایش وجود ندارد"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rcy_favoriteProduct"
        app:layout_constraintEnd_toEndOf="@+id/rcy_favoriteProduct"
        app:layout_constraintStart_toStartOf="@+id/rcy_favoriteProduct"
        app:layout_constraintTop_toTopOf="@+id/rcy_favoriteProduct" />
</androidx.constraintlayout.widget.ConstraintLayout>