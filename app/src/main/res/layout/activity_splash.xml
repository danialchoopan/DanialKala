<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutSpalshScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_500"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/txw_danialKalaLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DANIAL KALA"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_Splash"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:progressTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txw_danialKalaLable"
        app:layout_constraintStart_toStartOf="@+id/txw_danialKalaLable"
        app:layout_constraintTop_toBottomOf="@+id/txw_danialKalaLable" />
</androidx.constraintlayout.widget.ConstraintLayout>