<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_orders_order_status_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DC3CAC40"
            android:fontFamily="@font/vazir"
            android:gravity="center"
            android:padding="10dp"
            android:text="پرداخت شده"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_orders_order_status_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F44336"
            android:fontFamily="@font/vazir"
            android:gravity="center"
            android:padding="10dp"
            android:text="پرداخت موفقیت آمیز نبود"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_orders_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:padding="10dp"
            android:text="شماره سفارش"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_orders_order_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:padding="10dp"
            android:text="توضیحات"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_orders_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:padding="10dp"
            android:textColor="@color/many_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir"
            android:gravity="center"
            android:padding="5dp"
            android:text="برای مشاهده جزئیات کلیک کنید " />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e8e8e8" />
    </LinearLayout>
</androidx.cardview.widget.CardView>